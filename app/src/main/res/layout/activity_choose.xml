<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context="adzumrjada.notes.ChooseActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="81dp">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/NewButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="73dp"
        android:clickable="true"
        android:onClick="AddNewNote"
        android:tint="?android:attr/colorPressedHighlight"
        app:backgroundTint="@color/colorPrimaryDark"
        app:fabSize="normal"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:rippleColor="@android:color/holo_orange_dark"
        app:srcCompat="@drawable/ic_note_add_black_24dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="31dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/NewButton"
        android:layout_alignStart="@+id/NewButton"
        android:layout_centerVertical="true"
        android:clickable="true"
        android:onClick="MyNotes"
        android:tint="?android:attr/colorPressedHighlight"
        app:backgroundTint="@color/colorPrimaryDark"
        app:fabSize="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.47"
        app:rippleColor="@android:color/holo_orange_dark"
        app:srcCompat="@drawable/ic_view_list_black_24dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/About"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/NewButton"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/NewButton"
        android:layout_marginBottom="70dp"
        android:clickable="true"
        android:onClick="About"
        android:tint="?android:attr/colorPressedHighlight"
        app:backgroundTint="@color/colorPrimaryDark"
        app:fabSize="normal"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:rippleColor="@android:color/holo_orange_dark"
        app:srcCompat="@drawable/ic_help_black_24dp"
        tools:ignore="DuplicateIds,MissingConstraints"
        tools:layout_editor_absoluteY="359dp" />

</RelativeLayout>
